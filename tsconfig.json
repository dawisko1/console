{
  "include": [
    "./src/**/*.ts"
  ],
  "buildOptions": {
    "outDir": "./dist",
    "incremental": true
  },
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "target": "esnext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "lib": [
      "esnext",
      "DOM"
    ]
  }
}
